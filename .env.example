# Cognify Environment Configuration Template
# Copy this file to .env.development or .env.production and customize

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Cognify RAG System
VERSION=2.0.0
ENVIRONMENT=development  # development | production | testing
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# IMPORTANT: Change these in production! Use strong, random keys
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production-must-be-32-chars-min
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-must-be-32-chars-min
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Authentication
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["*"]

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL Database
DATABASE_URL=postgresql+asyncpg://cognify:password@localhost:5432/cognify
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false
DATABASE_POOL_RECYCLE=3600
DATABASE_POOL_PRE_PING=true

# =============================================================================
# VECTOR DATABASE SETTINGS
# =============================================================================
VECTOR_DB_TYPE=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-if-needed
QDRANT_COLLECTION_NAME=cognify_chunks
VECTOR_DIMENSION=1536
QDRANT_TIMEOUT=60

# =============================================================================
# CACHE SETTINGS
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-if-needed
CACHE_TTL=3600

# =============================================================================
# AI/LLM SETTINGS
# =============================================================================
# OpenAI Configuration - REQUIRED for AI features
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Alternative LLM Providers
ANTHROPIC_API_KEY=your-anthropic-api-key
VOYAGE_API_KEY=your-voyage-api-key
COHERE_API_KEY=your-cohere-api-key

# LiteLLM Configuration (Custom proxy)
LITELLM_API_KEY=your-litellm-api-key
LITELLM_BASE_URL=your-litellm-base-url
LITELLM_CHAT_MODEL=gpt-3.5-turbo
LITELLM_EMBEDDING_MODEL=text-embedding-3-small
LITELLM_MAX_TOKENS=4000
LITELLM_TEMPERATURE=0.5

# Default Providers
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_EMBEDDING_PROVIDER=openai
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# CHUNKING SETTINGS
# =============================================================================
CHUNKING_STRATEGY=hybrid  # simple | semantic | hybrid
CHUNKING_QUALITY_THRESHOLD=0.8
CHUNKING_MAX_PROCESSING_TIME=30
CHUNKING_CACHE_TTL=3600

# =============================================================================
# AGENT SETTINGS
# =============================================================================
AGENT_MAX_ITERATIONS=5
AGENT_TIMEOUT=60
AGENT_MEMORY_ENABLED=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
SENTRY_DSN=your-sentry-dsn-if-using
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=json  # json | text

# =============================================================================
# FILE PROCESSING SETTINGS
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
SUPPORTED_LANGUAGES=["python", "javascript", "typescript", "go", "java", "rust", "cpp"]

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_BURST=200
RATE_LIMIT_WINDOW=60

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_CONNECTIONS=100
POOL_SIZE=20
ENABLE_CACHING=true
ENABLE_COMPRESSION=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SWAGGER_UI=true
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_ENTERPRISE_FEATURES=false
